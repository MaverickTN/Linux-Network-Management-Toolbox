# LNMT Environment Variables
# Copy this file to .env and update with your values
# DO NOT commit .env to version control

# Application
APP_ENV=production
APP_DEBUG=false
APP_KEY=GENERATE_A_RANDOM_32_CHAR_STRING_HERE
APP_URL=http://localhost:8080

# Database
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lnmt_db
DB_USER=lnmt_user
DB_PASSWORD=CHANGE_ME_NOW
DB_SSL_MODE=prefer

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication
AUTH_SESSION_LIFETIME=3600
AUTH_SECRET_KEY=GENERATE_ANOTHER_RANDOM_STRING_HERE
JWT_SECRET=GENERATE_JWT_SECRET_HERE
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA=3600

# Email
MAIL_ENABLED=false
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_USE_TLS=true
MAIL_FROM_ADDRESS=noreply@lnmt.local
MAIL_FROM_NAME="LNMT System"

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/lnmt/app.log
LOG_MAX_SIZE=100M
LOG_BACKUP_COUNT=10

# Security
SECURITY_SALT=GENERATE_SECURITY_SALT_HERE
ENCRYPTION_KEY=GENERATE_ENCRYPTION_KEY_HERE

# LDAP (Optional)
LDAP_ENABLED=false
LDAP_SERVER=ldap://ldap.example.com
LDAP_PORT=389
LDAP_BASE_DN=dc=example,dc=com
LDAP_BIND_DN=
LDAP_BIND_PASSWORD=

# External APIs (Optional)
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=
PAGERDUTY_API_KEY=

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# File Paths
DATA_DIR=/var/lib/lnmt
BACKUP_DIR=/var/backups/lnmt
TEMP_DIR=/tmp/lnmt
LOG_DIR=/var/log/lnmt
CONFIG_DIR=/etc/lnmt

# Network Discovery
DISCOVERY_NETWORKS=192.168.1.0/24,10.0.0.0/16
DISCOVERY_INTERVAL=3600

# Performance
WORKERS=4
WORKER_CONNECTIONS=1000
WORKER_TIMEOUT=30

# Feature Flags
FEATURE_DNS_MANAGEMENT=true
FEATURE_VLAN_MANAGEMENT=true
FEATURE_BACKUP_RESTORE=true
FEATURE_REPORTING=true
FEATURE_API_ACCESS=true

# Docker Specific (if using Docker)
DOCKER_INTERNAL_PORT=8080
DOCKER_EXTERNAL_PORT=8080
DOCKER_NETWORK=lnmt_network